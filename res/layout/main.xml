<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<TextView 
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Paired Devices"
        android:id="@+id/tvPD"
    />

	<TextView 
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/tvPD"
        android:text="Disconnect"
        android:id="@+id/tvStatus"
    />
	
	<EditText
		android:id="@+id/edtMessage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tvStatus"
		android:hint="text"
		
		/>

	<Button
		android:id="@+id/bConnectNew"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/edtMessage"
		android:text="mensagem"
		android:onClick="mandarMensagem"/>
			

	<Button
		android:id="@+id/bTouch"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/bConnectNew"
		android:text="Touch"
		android:onClick="touch"/>
		
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bTouch">
    </ListView>
	


</RelativeLayout>
